<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/white" android:shape="oval"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item
                android:width="56dp"
                android:height="56dp">
                <shape android:shape="oval">
                    <gradient
                        android:angle="90"
                        android:startColor="@color/segundo"
                        android:endColor="@color/primero"
                        />
                </shape>
            </item>
            <item
                android:drawable="@drawable/event_new"
                android:gravity="center"
                android:width="20dp"
                android:height="20dp"/>
        </layer-list>
    </item>
</ripple>